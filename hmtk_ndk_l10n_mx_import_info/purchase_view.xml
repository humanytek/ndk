<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <!-- Purchase lines inherit tree for import info -->
        <record model="ir.ui.view" id="hmtk_purchase_order_line_view_tree_inherit">
            <field name="name">purchase.order.line.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
            	<xpath expr="//tree/field[@name='price_subtotal']" position="before">
            		<field name="amount_igi"/>
            	</xpath>
            	<xpath expr="//tree/field[@name='order_id']" position="after">
            		<field name="origin"/>
            	</xpath>
            </field>
        </record>
        <!-- Purchase lines inherit form for import info -->
        <record model="ir.ui.view" id="hmtk_purchase_order_line_view_form_inherit">
            <field name="name">purchase.order.line.form</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
            <field name="arch" type="xml">
	            <field name="taxes_id" position="after">
	            		<field name="amount_igi"/>
	            		
	           	</field>
            </field>
        </record>
        <!-- Purchase form view-->
        <record model="ir.ui.view" id="hmtk_purchase_order_form_inherit">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//form/sheet/notebook/page[@string='Purchase Order']/field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
            		<field name="amount_igi"/>
            		<field name="amount_of_expend"/>
            		<field name="amount_with_expense"/>
            	</xpath>
            </field>
        </record>
        <!-- Purchase order tree  -->
        <record model="ir.ui.view" id="hmtk_purchase_order_view_inherit">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
	            <xpath expr="//tree/field[@name='origin']" position="replace">
            	</xpath>
            	<xpath expr="//tree/field[@name='name']" position="after">
            		<field name="origin"/>
            	</xpath>
            </field>
        </record>
	</data>
</openerp>