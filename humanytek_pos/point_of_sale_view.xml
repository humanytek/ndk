<?xml version="1.0"?>
<openerp>
    <data>
    
        <record id="view_pos_order_inherit_form" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Extra Info']/group/field[@name='pos_reference']" position="after">
                     <field name="return_order"/>
                </xpath>
                <xpath expr="//header/button[@string='Return Products']" position="replace">
                     <button name="%(action_view_user_validation)d" string="Return Products"
	                        type="action"
	                        attrs="{'invisible':[('state','=','draft')]}"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>