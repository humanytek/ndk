<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_user_validation" model="ir.ui.view">
            <field name="name">Check User</field>
            <field name="model">user.validation</field>
            <field name="arch" type="xml">
                <form string="To Check User">
                    <group>
                        <field name="password" password="True"/>
                    </group>
                    <footer>
                        <button name="check_user" string="_Apply" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_user_validation" model="ir.actions.act_window">
            <field name="name">Check User</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">user.validation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_user_validation"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>